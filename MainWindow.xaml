<Window x:Class="MultiplicativeCypher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MultiplicativeCypher"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <StackPanel Name="StartUp" Visibility="Visible">
            <Label Content="Would you like to encrypt or decrypt a message?" Margin="60,50,60,0" FontSize="18"/>
            <Button Click="Button_Click" Name="encrypt_click" Content="Encrypt" Margin="120,100,280,0" Height="30"/>
            <Button Click="Button_Click" Name="decrypt_click" Content="Decrypt" Margin="280,-30,120,0" Height="30"/>
        </StackPanel>
        <StackPanel Name="UserEntry" Visibility="Hidden">
            <Label Content="Enter your message:"></Label>
            <TextBox Height="23" TextWrapping="Wrap" Text="TextBox"/>
            <Button Click="Button_Click2" Name="submit" Content="Submit"></Button>
        </StackPanel>
        <StackPanel Name="Cipher" Visibility="Hidden">
            <Label Content="Here is your message:"></Label>
        </StackPanel>
    </StackPanel>
</Window>
